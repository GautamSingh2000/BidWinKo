<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/trophycard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background_gray"
        app:cardElevation="0dp"
        card_view:cardCornerRadius="0dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/trophy_animation1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:layout_gravity="start|center_vertical"
                    app:lottie_rawRes="@raw/party3" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/trophy_animation2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    app:lottie_rawRes="@raw/party2" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/trophy_animation3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="130dp"
                    android:layout_gravity="end|center_vertical"
                    app:lottie_rawRes="@raw/party3" />
            </LinearLayout>
            <com.airbnb.lottie.LottieAnimationView
                android:visibility="gone"
                android:id="@+id/trophy_animation4"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="end|center_vertical"
                app:lottie_rawRes="@raw/party3" />
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:src="@drawable/trophy" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:backgroundTint="@color/white"
        android:id="@+id/bid_recycler_view"
        tools:itemCount="8"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/single_winner_list"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/trophycard"
        android:scrollbars="none" />
    </RelativeLayout>
</ScrollView>
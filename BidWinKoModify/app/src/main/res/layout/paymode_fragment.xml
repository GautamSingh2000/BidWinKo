<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
       app:contentPadding="20dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <LinearLayout
               android:layout_gravity="center"
               android:gravity="right"
               android:orientation="horizontal"
               android:layout_weight="1.2"
               android:layout_width="0dp"
               android:layout_height="wrap_content">

               <ImageView
                   android:layout_marginRight="5dp"
                   android:src="@drawable/hammer"
                   android:layout_width="40dp"
                   android:layout_height="50dp"/>

               <TextView
                   android:id="@+id/bidbalance"
                   android:textColor="@color/black"
                   android:textStyle="bold"
                   android:textSize="20sp"
                   android:layout_gravity="center"
                   android:text="2 Bid"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

           </LinearLayout>

            <TextView
                android:id="@+id/bidamount"
                android:gravity="right"
                android:layout_weight=".8"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text="20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <TextView
            android:textSize="15sp"
            android:background="@color/white"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Payment Options:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >


                    <LinearLayout
                        android:id="@+id/ll_radio_cashfree"
                        android:layout_marginBottom="2dp"
                        android:padding="6dp"
                        android:visibility="gone"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:checked="true"
                            android:text="Cash Free"
                            android:visibility="visible"
                            android:drawableLeft="@drawable/ic_cashfree_icon"
                            android:onClick="onRadioButtonClicked"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/cashfree"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_radio_googleplay"
                        android:layout_marginBottom="2dp"
                        android:padding="6dp"
                        android:visibility="gone"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <androidx.appcompat.widget.AppCompatRadioButton

                            android:text="Google Play"
                            android:visibility="visible"
                            android:id="@+id/googlepay"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:drawableLeft="@drawable/googleplay"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:onClick="onRadioButtonClicked" />



                    </LinearLayout>




                    <LinearLayout
                        android:id="@+id/ll_radio_wallet"
                        android:layout_marginBottom="2dp"
                        android:padding="6dp"
                        android:visibility="gone"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:text="Wallet Payment"
                            android:visibility="visible"
                            android:drawableLeft="@drawable/ic_wallet"
                            android:onClick="onRadioButtonClicked"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/wallet"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textAllCaps="true"

                            />


                    </LinearLayout>

                </RadioGroup>


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/paybid"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:padding="12dp"
                android:background="@color/btn_bid_color"
                android:text="Pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:visibility="visible"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/btn_bid_color"
                android:text="PAY"
                android:id="@+id/iap4_google_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

<!--            <Button-->
<!--                android:textStyle="bold"-->
<!--                android:textColor="@color/white"-->
<!--                android:background="@color/btn_bid_color"-->
<!--                android:text="PAY Cash Free"                -->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"/>-->

        </LinearLayout>







    </LinearLayout>




</LinearLayout>
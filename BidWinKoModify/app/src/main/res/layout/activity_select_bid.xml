<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.activity.SelectBidActivity">

    <LinearLayout
        android:id="@+id/appbar"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/_40sdp">
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/ic_arrow_back"/>
        <TextView
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/place_bid"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:fontFamily="@font/lato_regular"
            android:textSize="@dimen/_15ssp"/>

        <TextView
            android:id="@+id/bidsAvailable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" -- Bid"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textColor="@color/white"
            android:gravity="end|center_vertical"
            android:fontFamily="@font/lato_regular"
            android:textSize="@dimen/_12ssp"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingHorizontal="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/lato_bold"
                android:text="Select bid range"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/prevbtn"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/darkgray"
                    app:cardCornerRadius="@dimen/_5sdp">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/ic_arrow_back"/>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rangerv"
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    app:layoutManager= "androidx.recyclerview.widget.LinearLayoutManager"
                    android:background="#F6F6F6"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:paddingVertical="@dimen/_2sdp"
                    android:layout_gravity="center_vertical"
                    tools:listitem="@layout/single_bidrange_layout"
                    tools:itemCount="10"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/nextbtn"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/darkgray"
                    app:cardCornerRadius="@dimen/_5sdp">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/ic_arrow_back"
                        android:rotation="180"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Select one or more bids"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />
                <ImageView
                    android:id="@+id/reset_btn"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_alignTop="@id/text1"
                    android:src="@drawable/restart"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:fontFamily="@font/lato_bold"
                android:text="The lowest unique  bid will win"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/_9ssp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/allbid_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/single_bidrange_layout"
                tools:itemCount="100"
                app:spanCount="6"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/transparent"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/place_bid"
        app:cornerRadius="@dimen/_5sdp"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:backgroundTint="@color/littledarkgray"
        android:focusable="true"
        android:clickable="true"
        android:textAllCaps="false"
        android:elevation="@dimen/_20sdp"
        android:text="Place Bid"
        android:shadowColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/lato_bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp" />
</RelativeLayout>
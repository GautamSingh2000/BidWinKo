<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ignore="NamespaceTypo">
    <LinearLayout
        android:id="@+id/appbar"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/ic_arrow_back"/>
        <TextView
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/productdetails"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:fontFamily="@font/lato_regular"
            android:textSize="@dimen/_15ssp"/>
    </LinearLayout>

    <ScrollView
        android:layout_below="@id/appbar"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                card_view:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp">
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/placeholder"
                    android:id="@+id/productimage"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                card_view:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp">
                        <ImageView
                            android:id="@+id/ribbon"
                            android:layout_width="110dp"
                            android:scaleType="fitCenter"
                            android:layout_height="50dp"
                            android:src="@drawable/ribbon"
                            android:alpha="0.4"/>
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/live_anim"
                            android:padding="@dimen/_1sdp"
                            android:layout_width="32dp"
                            android:layout_height="match_parent"
                            app:lottie_rawRes="@raw/green_live"/>
                        <TextView
                            android:id="@+id/ribbon_tag"
                            android:layout_toEndOf="@id/live_anim"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Live Now"
                            android:textSize="12sp"
                            android:layout_marginStart="-6dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="1d 20h 5m"
                            android:fontFamily="@font/barlow_bold"
                            android:layout_alignParentEnd="true"
                            android:textSize="13sp"
                            android:textColor="@color/blue"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/profile_ll"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/profiles_rv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:orientation="horizontal"
                            card_view:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:itemCount="4"
                            app:listitem="@layout/single_circular_profile_image_row_component_layout"/>
                        <TextView
                            android:id="@+id/profile_people_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+31"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="@dimen/_10ssp"/>
                    </LinearLayout>

                    <com.bidwinko.components.CustomSeekBar
                        android:id="@+id/progressBar"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"/>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="You have "
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/no_of_bid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/lato_bold"
                                android:text="2"
                                android:textColor="@color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" bids"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/black" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/mybid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:paddingVertical="@dimen/_10sdp"
                            android:background="@drawable/gray_rounded_border"
                            android:text="My Bids"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="normal"
                            android:id="@+id/bidwork"
                            android:text="@string/howbidworks"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/lato_bold"
                            android:visibility="visible"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/buybid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/gray_rounded_border"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="Buy Bids"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/gray" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                card_view:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_55sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/productname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - - "
                        android:textSize="@dimen/_15ssp"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/productprice"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/ic_rupee_active"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text=" - - "
                        android:textSize="@dimen/_13ssp"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Key features"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/features"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" - - "
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="#838181"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/place_bid"
        card_view:cornerRadius="@dimen/_5sdp"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:focusable="true"
        android:clickable="true"
        android:elevation="@dimen/_10sdp"
        android:text="Place Bid"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/lato_bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textAllCaps="false"/>
</RelativeLayout>
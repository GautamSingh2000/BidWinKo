    <ScrollView
        android:id="@+id/sv"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                card_view:cardElevation="0dp"
                card_view:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/productimage"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:src="@drawable/placeholder" />

                    <LinearLayout
                        android:translationZ="@dimen/_10sdp"
                        android:id="@+id/otherimage"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv2"
                            android:visibility="gone"
                            android:layout_height="50dp"
                            android:layout_width="60dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            card_view:cardBackgroundColor="@color/white"
                            card_view:cardCornerRadius="@dimen/_7sdp">

                            <ImageView
                                android:id="@+id/productimage2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/placeholder" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv3"
                            android:visibility="gone"
                            android:layout_height="50dp"
                            android:layout_width="60dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            card_view:cardBackgroundColor="@color/white"
                            card_view:cardCornerRadius="@dimen/_7sdp">
                            <ImageView
                                android:id="@+id/productimage3"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/placeholder" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:visibility="gone"
                            android:id="@+id/cv4"
                            android:layout_height="50dp"
                            android:layout_width="60dp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginHorizontal="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            card_view:cardBackgroundColor="@color/white"
                            card_view:cardCornerRadius="@dimen/_7sdp">
                            <ImageView
                                android:id="@+id/productimage4"
                                android:layout_height="match_parent"
                                android:layout_width="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/placeholder" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                card_view:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp">
                        <ImageView
                            android:id="@+id/ribbon"
                            android:layout_width="110dp"
                            android:scaleType="fitCenter"
                            android:layout_height="50dp"
                            android:src="@drawable/ribbon"
                            android:alpha="0.4"/>
                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/live_anim"
                            android:padding="@dimen/_1sdp"
                            android:layout_width="32dp"
                            android:layout_height="match_parent"
                            app:lottie_rawRes="@raw/green_live"/>
                        <TextView
                            android:id="@+id/ribbon_tag"
                            android:layout_toEndOf="@id/live_anim"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Live Now"
                            android:textSize="12sp"
                            android:layout_marginStart="-6dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/transactiontime"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="-- d --h --m"
                            android:fontFamily="@font/barlow_bold"
                            android:layout_alignParentEnd="true"
                            android:textSize="13sp"
                            android:textColor="@color/blue"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/profile_ll"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profileimage1"
                            android:layout_marginEnd="-18dp"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                          
                            app:shapeAppearanceOverlay="@style/CircularImage"
                            />
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profileimage2"
                            android:layout_marginEnd="-18dp"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                          
                            app:shapeAppearanceOverlay="@style/CircularImage"
                            />
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profileimage3"
                            android:layout_marginEnd="-18dp"
                            android:layout_centerInParent="true"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                          
                            app:shapeAppearanceOverlay="@style/CircularImage"
                            />
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/profileimage4"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                          
                            app:shapeAppearanceOverlay="@style/CircularImage"
                            />
                        <TextView
                            android:id="@+id/profile_people_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="@dimen/_10ssp"/>
                    </LinearLayout>

                    <com.bidwinko.components.CustomSeekBar
                        android:id="@+id/progressBar"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:thumbOffset="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="100"/>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="You have "
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/no_of_bid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/lato_bold"
                                android:text=" "
                                android:textColor="@color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" bids"
                                android:textSize="@dimen/_12ssp"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/black" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/mybid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:paddingVertical="@dimen/_10sdp"
                            android:background="@drawable/gray_rounded_border"
                            android:text="My Bids"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textStyle="normal"
                            android:id="@+id/bidwork"
                            android:text="@string/howbidworks"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/lato_bold"
                            android:visibility="visible"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/buybid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:background="@drawable/gray_rounded_border"
                            android:paddingVertical="@dimen/_10sdp"
                            android:text="Buy Bids"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/gray" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                card_view:cardElevation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/white"
                card_view:cardCornerRadius="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_55sdp"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/productname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - - "
                        android:textSize="@dimen/_15ssp"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/productprice"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/ic_rupee_active"
                        android:drawablePadding="@dimen/_5sdp"
                        android:text=" - - "
                        android:textSize="@dimen/_13ssp"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Key features"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/features"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" - - "
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_11ssp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="#838181"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <View
                android:backgroundTint="@color/transparent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"/>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/place_bid"
        card_view:cornerRadius="@dimen/_5sdp"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:focusable="true"
        card_view:rippleColor="@color/white"
        android:clickable="true"
        android:elevation="@dimen/_10sdp"
        android:text="Place Bid"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/lato_bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textAllCaps="false"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/c1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-50dp"
        android:layout_marginStart="-100dp"
        android:alpha="0.2"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:backgroundTint="@color/light_red"
        android:background="@drawable/circle_background"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/c2"
        android:alpha="0.05"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="-90dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/_500sdp"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp">

                <androidx.cardview.widget.CardView
                    app:cardElevation="0dp"
                    android:id="@+id/profileimagecv"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    app:cardCornerRadius="@dimen/_500sdp">

                    <ImageView
                        android:id="@+id/profileimage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:src="@drawable/myprofile_tab_layout"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>


                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/anim"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/profile" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/fab_edit"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/profileimagecv"
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="@dimen/_50sdp"
                    app:cardElevation="@dimen/_2sdp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/camera"
                        android:tint="@color/colorPrimary" />
                </androidx.cardview.widget.CardView>


            </RelativeLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/blue"
                app:boxStrokeErrorColor="@color/btn_bid_color"
                app:cursorErrorColor="@color/btn_bid_color"
                app:errorIconDrawable="@drawable/baseline_error_24"
                app:hintEnabled="true"
                app:hintTextColor="@color/blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Name"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_txt" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/blue"
                app:boxStrokeErrorColor="@color/btn_bid_color"
                app:cursorErrorColor="@color/btn_bid_color"
                app:errorIconDrawable="@drawable/baseline_error_24"
                app:hintTextColor="@color/blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_useremail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_txt" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/blue"
                app:boxStrokeErrorColor="@color/btn_bid_color"
                app:cursorErrorColor="@color/btn_bid_color"
                app:errorIconDrawable="@drawable/baseline_error_24"
                app:hintEnabled="true"
                app:hintTextColor="@color/blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_usermobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Mobile"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_txt" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                app:boxBackgroundColor="@color/white"
                app:boxStrokeColor="@color/blue"
                app:boxStrokeErrorColor="@color/btn_bid_color"
                app:cursorErrorColor="@color/btn_bid_color"
                app:errorIconDrawable="@drawable/baseline_error_24"
                app:hintEnabled="true"
                app:hintTextColor="@color/blue">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_shipaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_100sdp"
                    android:hint="Enter Your Address"
                    android:inputType="textPostalAddress"
                    android:textColor="@color/black"
                    android:textSize="@dimen/custom_txt" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submit_userinfo"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:backgroundTint="@color/colorPrimary"
                android:clickable="true"
                android:elevation="@dimen/_10sdp"
                android:focusable="true"
                android:fontFamily="@font/lato_bold"
                android:text="SUBMIT"
                android:textAllCaps="false"
                android:textSize="@dimen/_12ssp"
                card_view:cornerRadius="@dimen/_5sdp" />


        </LinearLayout>

    </ScrollView>


</RelativeLayout>
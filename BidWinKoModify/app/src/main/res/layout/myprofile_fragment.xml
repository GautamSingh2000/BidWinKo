<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <LinearLayout
           android:padding="20dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <ImageView
                   android:layout_centerInParent="true"
                   android:id="@+id/profileimage"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:scaleType="centerCrop"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_user_pic" />



               <com.google.android.material.floatingactionbutton.FloatingActionButton
                   android:id="@+id/fab_edit"
                   app:fabSize="mini"
                   app:borderWidth="0dp"
                   android:visibility="visible"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_alignParentBottom="true"
                   android:layout_toRightOf="@id/profileimage"
                   android:backgroundTintMode="@color/white"
                   android:layout_marginLeft="-30dp"
                   android:src="@drawable/ic_edit_black" />

           </RelativeLayout>


               <TextView
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:text="Full Name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <EditText
                   android:textSize="@dimen/custom_txt"
                   android:enabled="false"
                   android:id="@+id/et_username"
                   android:textColor="@color/black"
                   android:hint="Enter Name"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

               <TextView
                   android:textStyle="bold"
                   android:textColor="@color/black"
                   android:text="User Email"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>

               <EditText
                   android:textSize="@dimen/custom_txt"
                   android:enabled="false"
                   android:id="@+id/et_useremail"
                   android:textColor="@color/black"
                   android:hint="Enter Your Email"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>

               <TextView
               android:textStyle="bold"
               android:textColor="@color/black"
               android:text="Mobile Number"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

               <EditText
               android:textSize="@dimen/custom_txt"
               android:enabled="false"
               android:id="@+id/et_usermobile"
               android:textColor="@color/black"
               android:hint="Enter Your Mobile"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

               <TextView
               android:textStyle="bold"
               android:textColor="@color/black"
               android:text="Shipping Address"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

               <EditText
               android:textSize="@dimen/custom_txt"
               android:enabled="false"
               android:id="@+id/et_shipaddress"
               android:textColor="@color/black"
               android:hint="Enter Your Address"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

               <TextView
               android:id="@+id/submit_userinfo"
               android:enabled="false"
               android:layout_marginTop="10dp"
               android:textSize="16sp"
               android:gravity="center"
               android:padding="11dp"
               android:background="@color/btn_bid_color"
               android:text="Submit"
               android:textColor="@color/white"
               android:layout_gravity="center"
               android:layout_width="300dp"
               android:layout_height="wrap_content"/>


       </LinearLayout>

    </ScrollView>



</LinearLayout>
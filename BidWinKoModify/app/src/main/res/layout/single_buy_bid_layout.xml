<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/carview"
    android:layout_marginTop="2dp"
    android:layout_marginHorizontal="@dimen/_5sdp"
    app:cardElevation="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_7sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<com.facebook.shimmer.ShimmerFrameLayout
    android:id="@+id/offer_tv"
    app:shimmer_auto_start="true"
    app:shimmer_repeat_mode="restart"
    app:shimmer_repeat_delay="@integer/material_motion_duration_long_2"
    app:shimmer_base_alpha="0.5"
    app:shimmer_direction="left_to_right"
    android:layout_alignParentEnd="true"
    android:layout_alignParentTop="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/offer_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/pink_blue_white_gradient"
        android:paddingHorizontal="@dimen/_7sdp"
        android:paddingVertical="@dimen/_1sdp"
        android:text="40% OFF"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp" />
</com.facebook.shimmer.ShimmerFrameLayout>


<RelativeLayout
    android:layout_below="@id/offer_tv"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/no_of_bid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="40  Bids"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/lato_bold"
            android:layout_marginStart="@dimen/_15sdp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/expiry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/_20sdp"
            app:cardBackgroundColor="#FDE17A"
            >
            <TextView
                android:id="@+id/expiry_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expire in 15 days"
                android:paddingVertical="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_7sdp"
                android:textSize="@dimen/_9ssp"
                android:fontFamily="@font/barlow_bold"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/amount_tv"
            android:text="150"
            android:drawableStart="@drawable/rupeee"
            android:paddingVertical="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_15sdp"
            android:textSize="@dimen/_12ssp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/red_rounded_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>
    </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        app:contentPadding="4dp"
        android:id="@+id/card_main"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_weight=".56"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="500dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:background="@drawable/white_holo_circle"
                        android:id="@+id/userimage"
                        android:padding="15dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/holo_person" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:paddingTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_height="match_parent"
                android:layout_weight="1.6">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rohit Sharma"
                    android:fontFamily="@font/barlow_bold"
                    android:textSize="17sp"
                    android:lines="1"
                    android:ellipsize="end"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Winning Bid:"
                        android:fontFamily="@font/barlow_medium"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        />
                    <TextView
                        android:id="@+id/winbidsprice"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06.25"
                        android:fontFamily="@font/barlow_bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="13sp"
                        />
                </LinearLayout>

                <TextView
                    android:textSize="13sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="5dp"
                    android:id="@+id/winnerlocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_medium"
                    android:text="location"
                    android:textColor="@color/black" />

            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/productimage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="22dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/product_icon" />

                <TextView
                    android:textSize="13sp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/Productname"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/lato_regular"
                    android:text="Product name"
                    android:textColor="@color/black" />



            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:dividerColor="@color/background_gray"/>

</LinearLayout>
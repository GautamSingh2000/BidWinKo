<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp"
    android:clipChildren="false"
    android:clipToPadding="false">

<LinearLayout
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_weight="2"
    android:layout_width="match_parent"
    android:layout_height="0dp">

    <ImageView
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:transitionName="logo"
        android:src="@drawable/bidlogo"/>
    <TextView
        android:transitionName="appname"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/lato_bold"
        android:text="@string/app_namebidwin"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_100sdp"
        app:lottie_rawRes="@raw/giftss"
        app:lottie_autoPlay="true"
        app:lottie_repeatMode="restart" />

    <TextView
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:textColor="@color/gray_4"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/lato_bold"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:text="JUST BID AND WIN PRIZES"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        android:fontFamily="@font/lato_bold"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:text="Login now and get bids worth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginHorizontal="@dimen/_70sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/design1" />
        <TextView
            android:id="@+id/prize"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 Bids Free"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            />
    </RelativeLayout>

</LinearLayout>


    <LinearLayout
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/google_login"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/btn_bid_color"
            app:cardCornerRadius="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_toLeftOf="@id/tv"
                    android:layout_centerVertical="true"
                    android:tint="@color/white"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/google"/>
                <TextView
                    android:id="@+id/tv"
                    android:paddingVertical="@dimen/_7sdp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato_bold"
                    android:text="Google Login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:id="@+id/tv_privacy"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:text="By Continuing You Indicate that You have Read and Agree to our Privacy Policy and Terms Of Services."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"/>




    </LinearLayout>





<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.google.android.material.appbar.AppBarLayout
        app:layout_scrollFlags="scroll|enterAlways"
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.Toolbar
            app:titleTextColor="@color/white"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/black">

            <ImageView
                android:visibility="gone"
                android:id="@+id/menu_action_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_gravity="start"
                android:src="@drawable/ic_menu_inactive"
                android:contentDescription="menu button" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="0dp"
                android:src="@drawable/gavel_two"
                android:contentDescription="icon" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="example"
                android:paddingStart="5dp"
                android:textColor="@color/white"
                android:fontFamily="@font/lato_bold"
                android:textSize="17sp"
                android:gravity="center"
                />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical"
        android:id="@+id/ll_main_fragment"
        android:layout_below="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:visibility="visible"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:id="@+id/fragment_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp">
            
            <LinearLayout
                android:weightSum="5"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_above="@id/bottom_navigation_cv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/auction_indicator"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_6sdp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/circle_background"/>
                <ImageView
                    android:id="@+id/buybid_indicator"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:visibility="gone"
                   android:layout_height="@dimen/_6sdp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/circle_background"/>
                <ImageView
                    android:id="@+id/winner_indicator"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:visibility="gone"
                   android:layout_height="@dimen/_6sdp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/circle_background"/>
                <ImageView
                    android:id="@+id/profile_indicator"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_width="0dp"
                   android:layout_height="@dimen/_6sdp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/circle_background"/>
                <ImageView
                    android:id="@+id/menu_indicator"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_width="0dp"
                   android:layout_height="@dimen/_6sdp"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/circle_background"/>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/bottom_navigation_cv"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.bottomnavigation.BottomNavigationView
                    app:itemIconTint="@drawable/bottom_nav_icon_color_selector"
                    app:itemTextColor="@drawable/bottom_nav_icon_color_selector"
                    android:id="@+id/bottom_navigation"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@color/white"
                    app:menu="@menu/menu_navigation"
                    app:labelVisibilityMode="selected" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>


</RelativeLayout>

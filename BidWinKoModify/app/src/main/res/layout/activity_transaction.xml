<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".screens.activity.TransactionActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bid_recycler_view"
        android:layout_width="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/nodatafound"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animm"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/_50sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:lottie_rawRes="@raw/wind"
            app:lottie_autoPlay="true"
            app:lottie_repeatMode="restart"/>

        <ImageView
            android:id="@+id/image"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/confused_tiger"/>

        <TextView
            android:id="@+id/tv"
            android:layout_marginTop="-5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:fontFamily="@font/barlow_medium"
            android:text="No Data Found"
            android:textColor="@color/blue"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_12ssp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/wrong"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/anim"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_70sdp"
            app:lottie_autoPlay="true"
            app:lottie_repeatMode="reverse"
            app:lottie_rawRes="@raw/api_wrong"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Somthing Went Wrong!"
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/light_red"
            android:layout_marginTop="-15dp"
            android:fontFamily="@font/barlow_bold"/>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/srno"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/_11ssp"
        android:layout_height="wrap_content"
        android:text="  -  -  "
        android:fontFamily="@font/barlow_regular"/>


    <androidx.cardview.widget.CardView
        android:layout_toEndOf="@id/srno"
        android:id="@+id/imagecv"
        android:layout_centerVertical="true"
        app:cardCornerRadius="500dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardElevation="0dp">
        <ImageView
            android:background="@drawable/white_holo_circle"
            android:id="@+id/userimage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/transName"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:fontFamily="@font/barlow_bold"
        android:layout_toEndOf="@id/imagecv"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textSize="@dimen/_10ssp"
        android:text="  -  -  "/>


    <TextView
        android:id="@+id/bids"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/transName"
        android:fontFamily="@font/barlow_medium"
        android:layout_toEndOf="@id/imagecv"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textSize="@dimen/_12ssp"
        android:text="  -  -  "/>

    <TextView
        android:id="@+id/transactiondate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_3sdp"
        android:text="  -  -  "
        android:drawablePadding="@dimen/_10ssp"
        android:drawableStart="@drawable/calendar"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_toEndOf="@id/imagecv"
        android:textColor="@color/darkgray"
        android:layout_below="@id/bids"
        android:fontFamily="@font/barlow_regular"
        android:textSize="@dimen/_11ssp"
        />

    <TextView
        android:id="@+id/transactiontime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/transactiondate"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_toEndOf="@id/transactiondate"
        android:drawableStart="@drawable/clock_five"
        android:layout_marginBottom="@dimen/_5sdp"
        android:textColor="@color/darkgray"
        android:drawablePadding="@dimen/_10ssp"
        android:fontFamily="@font/barlow_regular"
        android:text="  -  -  "
        android:textSize="@dimen/_11ssp" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:shimmer_base_alpha="0.8"
        app:shimmer_auto_start="true"
        app:shimmer_repeat_mode="restart"
        app:shimmer_direction="left_to_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/transamount"
        android:background="@drawable/red_rounded_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  -  -  "
        android:textSize="@dimen/_12ssp"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textColor="@color/white"
        android:gravity="center"
        android:foregroundGravity="center"/>
    </com.facebook.shimmer.ShimmerFrameLayout>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim"
        android:layout_marginTop="-5dp"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_30sdp"
        app:lottie_autoPlay="true"
        app:lottie_repeatMode="reverse"
        android:layout_toEndOf="@id/bids"
        android:layout_below="@id/transName"
        android:scaleType="centerCrop"
        app:lottie_rawRes="@raw/token"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_1sdp"
        android:layout_below="@id/transactiontime"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_height="0.7dp"
        app:dividerColor="@color/gray"/>

</RelativeLayout>